<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- A CardView that contains a TextView -->

    <TextView
        android:id="@+id/SelecaoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camarões"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/miniBrasao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toStartOf="@+id/SelecaoNome"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bandeiracamaroes" />



    <ImageView
        android:id="@+id/BrasaoSelecao"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="156dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasaocamaroes"
        tools:visibility="visible" />

    <Button
        android:id="@+id/botao"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/BrasaoSelecao"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="VER ESCALAÇÃO"
        android:textSize="18dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/partidas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao"
        app:layout_constraintVertical_bias="0.129">

        <TextView
            android:id="@+id/dia_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24/11"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/bandeiraSuica"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/bandeirasuica"
            android:layout_gravity="end"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suiça"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:layout_gravity="end"
            />

        <ImageView
            android:id="@+id/bandeiraCamaroes2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/bandeiracamaroes"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camarões"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="54dp"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/partidas2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partidas"
        app:layout_constraintVertical_bias="0.129">

        <TextView
            android:id="@+id/dia_jogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/11"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/bandeiraServia"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/bandeiraservia"
            android:layout_gravity="end"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servia"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:layout_gravity="end"
            />

        <ImageView
            android:id="@+id/bandeiraCamaroes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/bandeiracamaroes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camarões"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="54dp"
            />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/partidas3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partidas2"
        app:layout_constraintVertical_bias="0.129">

        <TextView
            android:id="@+id/dia_jogo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/12"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

        <ImageView
        android:id="@+id/bandeiraBrasil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/bandeirabrasil"
        android:layout_gravity="end"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brasil"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:layout_gravity="end"
            />

        <ImageView
            android:id="@+id/bandeiraCamaroes4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/bandeiracamaroes"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camarões"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="54dp"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>