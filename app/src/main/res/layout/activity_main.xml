<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/SelecaoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camarões"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:textColor="@color/black"
         />

    <ImageView
        android:id="@+id/miniBrasao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toStartOf="@+id/SelecaoNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bandeiracamaroes"
        />



    <ImageView
        android:id="@+id/BrasaoSelecao"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="120dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasaocamaroes"
        tools:visibility="visible" />


    <Button
        android:id="@+id/btnEscalacao"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="26dp"
        android:text="VER ESCALAÇÃO"
        android:textSize="18dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BrasaoSelecao" />


    <androidx.cardview.widget.CardView
        android:id="@+id/partidas"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEscalacao"
        >

        <TextView
            android:id="@+id/dia_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="24/11"
            android:textSize="16dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="x"
            android:textSize="20dp"
            android:layout_marginTop="4dp"
            />

        <ImageView
            android:id="@+id/bandeiraSuica"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            app:srcCompat="@drawable/bandeirasuica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:text="Suiça"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/bandeiraCamaroes2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/bandeiracamaroes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="16dp"
            android:text="Camarões"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/partidas2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partidas"
        app:layout_constraintVertical_bias="0.061">

        <TextView
            android:id="@+id/dia_jogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="28/11"
            android:textSize="16dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="x"
            android:textSize="20dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/bandeiraServia"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            app:srcCompat="@drawable/bandeiraservia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:text="Servia"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/bandeiraCamaroes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/bandeiracamaroes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="16dp"
            android:text="Camarões"
            android:textSize="18dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/partidas3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partidas2"
        app:layout_constraintVertical_bias="0.152">

        <TextView
            android:id="@+id/dia_jogo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="02/12"
            android:textSize="16dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="x"
            android:textSize="20dp"
            android:layout_marginTop="4dp"
            />

        <ImageView
            android:id="@+id/bandeiraBrasil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            app:srcCompat="@drawable/bandeirabrasil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="54dp"
            android:text="Brasil"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/bandeiraCamaroes4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/bandeiracamaroes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="16dp"
            android:text="Camarões"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>